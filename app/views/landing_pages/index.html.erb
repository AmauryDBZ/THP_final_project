<!-- WELCOME
================================================== -->
<section class="position-relative d-block py-0 mb-10">

  <!-- Content -->
  <div class="d-flex justify-content-center">
    <div class="row align-items-center">

      <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 order-md-2 mx-auto text-center w-auto p-auto">
        <!-- Image -->
        <div class="img" data-aos="fade-up" data-aos-delay="100">
          <%= image_tag "https://pictures.kitties.netlib.re/storage/open_source.svg", class: "img-fluid",alt:"image de couverture"%>
        </div>
      </div>

      <div class="col-xl-6 col-lg-12 col-md-12 mx-auto mt-4 mt-md-4 mt-sm-4 text-center" data-aos="fade-up">
        <!-- Heading -->
        <h1 class="display-3 text-center">
          Participez aussi au <br>
          <span class="text-primary">Libre et à l'Open Source</span>.
        </h1>

        <!-- Text -->
        <p class= "lead text-muted mb-6 text-center">
          Développeur comme visiteur, cette plateforme de financement<br> participatif vous permet d'ajouter votre pierre à l'édifice !<br>
        </p>

        <!-- Buttons -->
        <div class="container">
            <%= link_to "Voir tous les projets", projects_fr_path, class: "btn btn-primary mr-3 mt-3  lift"%>
            <%= link_to "Proposer votre projet", new_project_fr_path, class: "btn btn-sm btn-info mr-1 mt-3" %>
        </div>
      </div>
    </div> <!-- / .row -->
  </div>
</section>

<!-- Pitch cards
================================================== -->
<section class="container">
  <div class="mx-auto">
    <div class="card-deck" data-aos="fade-up">

      <div class="card card-border card-border-lg border-info shadow-light">
        <%= image_tag "https://pictures.kitties.netlib.re/storage/undraw_transfer_money_rywa.svg", class: "card-img-top mt-5", style: "height: 150px;", alt:"financement participatif"%>
        <div class="card-body">
          <p class="card-text text-center text-gray-600"><strong>Un financement sous forme de pourboires pour l'équipe de développement d'un projet.</strong></p>
        </div>
      </div>

      <div class="card card-border card-border-lg border-info shadow-light">
        <%= image_tag "https://pictures.kitties.netlib.re/storage/undraw_time_management_30iu.svg", class: "card-img-top mt-5", style: "height: 150px;", alt:"horloge tournante" %>
        <div class="card-body">
          <p class="card-text text-center text-gray-600"><strong>Une visualisation du temps nécessaire au développement de chacun des outils que vous utilisez.</strong></p>
        </div>
      </div>

      <div class="card card-border card-border-lg border-info shadow-light">
        <%= image_tag "https://pictures.kitties.netlib.re/storage/undraw_online_wishes_dlmr.svg", class: "card-img-top mt-5", style: "height: 150px;", alt:"accomplissement" %>
        <div class="card-body">
          <p class="card-text text-center text-gray-600"><strong> Une rémunération juste, c'est-à-dire plus de temps pour le développement et un outil de meilleure qualité !</strong></p>
        </div>
      </div>
    </div>
  </div>
</section>


<!--Navigation ==============================-->
<section class="pt-7 pt-md-10 " data-aos="fade-up">
  <div class="container mt-5">
    <hr>
    <p class="lead text-muted mb-6 text-center mb-10">
      Découvrez le meilleur du logiciel Libre et Open Source
    </p>
    <%=render "most_visited"%>

    <!--Choices-->
    <section class="pt-0 pt-md-0 pb-4 pt-md-4">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-body">
                <!-- Heading -->
                <h4 class="font-weight-bold text-center mb-0">
                  <%= link_to projects_fr_path, class: "font-weight-bold font-size-sm text-decoration-none", style: "text-decoration: none" do %>
                    Voir tous les projets
                    <i class="fas fa-arrow-right ml-3"></i>
                  <% end %>
                </h4>

                <!-- Text -->
                <p class="text-center text-muted mb-0">
                  <small data-toggle="countup" data-from="0" data-to="<%=@projects.where(validated: true).size%>" data-aos data-aos-id="countup:in"></small> projets déjà en ligne <br>
                </p>
              </div>
            </div>

            <!-- Card -->
            <div class="card-group card-border card-border-lg border-primary shadow-light-lg mx-10">
              <div class="card border-left-md">
                <%= link_to "#most_supported_projects", data:{ toggle: 'smooth-scroll', offset: '0' }, class: "text-gray-800", style: "text-decoration: none" do%>
                  <div class="card-body">

                    <!-- Heading -->
                    <h4 class="font-weight-bold text-center mb-0">
                      Les plus soutenus
                    </h4>

                    <!-- Text -->
                    <p class="text-center text-muted mb-0">
                      ceux qui ont reçu le plus de dons <br>
                      <i class="fas fa-chevron-circle-down lift"></i>
                    </p>

                  </div>
                <%end%>
              </div>
              <div class="card border-left-md">
                <%= link_to "#new_projects", data:{ toggle: 'smooth-scroll', offset: '0' }, class: "text-gray-800", style: "text-decoration: none" do%>
                  <div class="card-body">

                    <!-- Heading -->
                    <h4 class="font-weight-bold text-center mb-0">
                      Les plus récents
                    </h4>

                    <!-- Text -->
                    <p class="text-center text-muted mb-0">
                      les derniers projets ajoutés <br>
                      <i class="fas fa-chevron-circle-down lift"></i>
                    </p>

                  </div>
                <%end%>
              </div>
            </div>

            <!--Categories
            ========================================-->
            <div class="row align-items-center mb-5 pt-12">
              <div class="col-12 col-md">

                <!-- Heading -->
                <h3 class="mb-0 text-gray-700">
                  Parcourir les catégories
                </h3>

                <!-- Text -->
                <p class="mb-0 text-muted">
                  Voir les projets liés à des thèmes qui me tiennent à coeur
                </p>
              </div>
              <div class="col-12 col-md-auto">
                <!-- Button -->
                <%=link_to "Voir toutes les catégories", categories_fr_path, class:"btn btn-sm btn-outline-gray-300 d-none d-md-inline"%>
              </div>
            </div> <!-- / .row -->
            <div class="flickity-viewport-visible pt-2 pb-9" data-flickity='{"cellAlign": "center", "imagesLoaded": true, "pageDots": false, "prevNextButtons": false, "contain": true, "initialIndex":2}'>
              <% @categories.each do |category| %>
                <div class="col-12 col-md-5 col-lg-4">
                  <!-- Card -->
                  <%= link_to category_fr_path(category.slug), class: "card shadow-light-lg card-flush mb-7 mb-md-0 lift", title: "Voir plus" do %>
                    <!-- Image -->
                    <div class="card card-border card-border-xl border-primary">
                      <%= image_tag category.url, class: "card-img-top shadow-light-lg", alt: "image de couverture de #{category.name}"%>
                    </div>

                    <!-- Body -->
                    <div class="card-body text-center">

                    <!-- Preheading -->
                    <h3 class="m-1 ml-3 text-gray-700"><%= category.name %></h3>

                    </div>
                  <%end%>
                </div>
              <%end%>
            </div>
            <hr class="mt-5">

          </div>
        </div> <!-- / .row -->
      </div> <!-- / .container -->
    </section>

    <!-- PROJECTS
    ========================================= -->
    <%=render "most_supported"%>
    <%=render "new_projects"%>

  </div> <!--/ container -->
</section>
