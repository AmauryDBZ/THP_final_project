<div class="card card-border card-border-xl shadow-light-lg mb-5">
  <div class="card-body sans_serif_card_content">

    <%= link_to "Financer", project_charges_path(@project), class: "badge badge-lg badge-primary badge-float badge-float-outside fund_btn" %>

    <% if @project.money_earned == 0 %>
      <h3 style="font-weight: bold;" class="text-gray-700 mt-4">Soyez parmis les premiers à financer ce projet !</h3>
    <% elsif @project.money_earned > 0 %>
      <div class="main_figures d-flex flex-row ">
        <h2 class="main_figures mt-2"><%= @project.money_earned %> € </h2>
      </div>
      <div class="d-flex flex-row">
        <% if @project.money_earned == 1 %>
          <p>récolté grâce à</p>
        <% elsif @project.money_earned > 1 %>
          <p>récoltés grâce à</p>
        <% end %>
      </div>
      <div class="d-flex flex-row">
        <% if @donations.length == 1 %>
          <h3 id="sponsor" class="main_figures"><%= @donations.length %> donateur !</h3>
        <% else %>
          <h3 id="sponsor" class="main_figures"><%= @donations.length %> donateurs !</h3>
        <% end %>
      </div>
    <% end %>
    <hr>
    <h5 class="text-gray-700 mb-0">Ce projet, c'est :</h5>
    <h3 class="main_figures mt-0 mb-0"><%= @project.value_of_project %> €</h3>
    
    <h5 class="text-gray-700 mt-0 mb-0">de charges par mois, et</h5>
    <h3 class="main_figures mt-0 mb-0"><%= @project.number_of_developers_on_project %> développeurs</h3>
    <h5 class="text-gray-700 mt-0 mb-0">investis pendant un total de</h5>
    <h3 class="main_figures mt-0 mb-0"><%= @total %>h par semaine !</h3>
  </div>
</div>
