<!-- CONTENT
================================================== -->
<section class="section-border border-primary">
  <div class="container d-flex flex-column">
    <div class="row  ml-10 mt-5">
      <!-- Link -->
      <%= link_to :back, :class => "font-weight-bold font-size-sm text-decoration-none" do %>
        <i class="fas fa-arrow-left mr-3"></i>
        Page précédente
      <% end %>
    </div>
    <div class="row align-items-center justify-content-center no-gutters min-vh-100">
      <div class="col-12 col-md-5 col-lg-8 py-8 py-md-11 text-center">
        <!-- Heading -->
        <h1 class="mb-0 font-weight-bold">
          Créez votre projet
        </h1>

        <!-- Text -->
        <p class="mb-6 text-center text-muted">
          Remplissez les informations suivantes afin qu'un administrateur valide votre projet.
        </p>

        <!-- Form -->
        <%= form_with model: @project, class: "text-left", local: true do |form| %>

          <!-- Name -->
          <div class="form-group mb-5">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <%= form.label :name, 'Le nom de votre projet. *', class: "mb-5" %>
            <%= form.text_field :name, class: "form-control", placeholder: "Un titre explicite à propos de votre projet." %>
          </div>

          <!-- Pitch -->
          <div class="form-group mb-5">
            <%= form.label :pitch, 'Le pitch de votre projet. *', class: "mb-5" %>
            <%= form.text_area :pitch, class: "form-control", placeholder: "Les objectifs de votre projet, les problèmes auxquels il répond." %>
          </div>

          <!-- Functionalities -->
          <div class="form-group mb-5">
            <%= form.label :functionalities, 'Les fonctionnalités de votre projet. *', class: "mb-5" %>
            <%= form.text_area :functionalities, class: "form-control", placeholder: "Les caractéristiques techniques de votre projet, et ses fonctionnalités." %>
          </div>

          <!-- Categories -->
          <div class="row my-5">
            <div class="form_row">
              <label for="category_ids[]">Catégories liées au projet:</label>
              <% for category in Category.all do %>
                <br><%= check_box_tag 'category_ids[]', category.id,
                @project.category_ids.include?(category.id) %>
                <%= category.name.humanize %>
              <% end %>
            </div>
          </div>         

          <!-- URL -->
          <div class="form-group mb-5">
            <%= form.label :url, "L'url de ton projet.", class: "mb-5" %>
            <%= form.text_field :url, class: "form-control", placeholder: "https://monprojet.com/" %>
          </div>

          <!-- Value of project  -->
          <div class="form-group mb-5">
            <%= form.label :value_of_project, 'Le coût mensuel de votre projet en euros. *', class: "mb-5" %>
            <%= form.number_field :value_of_project, class: "form-control" %>
          </div>

          <!-- Number of developeurs on project  -->
          <div class="form-group mb-5">
            <%= form.label :number_of_developers_on_project, 'Nombre de développeurs travaillants sur le projet. *', class: "mb-5" %>
            <%= form.number_field :number_of_developers_on_project, class: "form-control" %>
          </div>

          <!-- Daily time spent on project per developer  -->
          <div class="form-group mb-5">
            <%= form.label :daily_time_spent_on_project_per_developer, "Nombre d'heures quotidiennes passées sur le projet, par développeur. *", class: "mb-5"%><br>
            <%= form.select :daily_time_spent_on_project_per_developer, options_for_select(1..12), {}, { class: "form-control" } %>
          </div>

          <!-- licence used for the project  -->
          <div class="form-group mb-5">
            <%= form.label :licence, "Type de licence utilisée pour votre projet", class: "mb-5"%><br>
            <%= form.select :licence, ['Aucune', 'Apache License 2.0', 'BSD 3-Clause "New" or "Revised" license', 'BSD 2-Clause "Simplified" or "FreeBSD" license', 'GNU General Public License (GPL)', 'GNU Library or "Lesser" General Public License (LGPL)', 'MIT license', 'Mozilla Public License 2.0', '
            Common Development and Distribution License', 'Eclipse Public License version 2.0', 'Autre']%>
          </div>

          <!-- Cover on project -->
          <div class="form-group mb-5">
            <%= form.label  "Ajouter une photo de couverture à votre projet", class: "mb-5" %><br>
            <%= form.file_field :cover %>
          </div>

          <!-- Images on project -->
          <div class="form-group mb-5">
          <%= form.label  "Ajouter des photos de présentations à votre projet", class: "mb-5" %><br>
          <%= form.file_field :images, multiple: true %>
          </div>


          <!-- Submit -->
          <div class="form-group mb-5">
            <%= form.submit "Créer ce projet", class: "btn btn-block btn-primary" %>
          </div>
        <%end%>
      </div>
    </div> <!-- / .row -->
  </div> <!-- / .container -->
</section>
