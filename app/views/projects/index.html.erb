<!-- WELCOME
================================================== -->
<section class="position-relative d-block py-0 mb-10">

  <!-- Content -->
  <div class="d-flex justify-content-center">
    <div class="row align-items-center">

      <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 order-md-2 mx-auto text-center w-auto p-auto">
        <!-- Image -->
        <div class="img" data-aos="fade-up" data-aos-delay="100">
          <%= image_tag "https://pictures.kitties.netlib.re/storage/open_source.svg", class: "img-fluid",alt:"index"%>
        </div>
      </div>

      <div class="col-xl-6 col-lg-12 col-md-12 mx-auto mt-4 mt-md-4 mt-sm-4 text-center" data-aos="fade-up">
        <!-- Heading -->
        <h1 class="display-3 text-center">
          Participez aussi au <br>
          <span class="text-primary">Libre et à l'Open Source</span>.
        </h1>

        <!-- Text -->
        <p class="lead text-muted mb-6 text-center">
          Découvrez le meilleur du logiciel Libre et Open Source.
        </p>

        <!-- Buttons -->
        <div class="container">
            <%= link_to "Proposer votre projet", new_project_fr_path, class: "btn btn block btn-primary mr-1 mt-3 lift" %>
            <%= link_to "Voir tous les projets", "#list_projects", class: "btn btn block btn-primary mr-1 mt-3  lift", data:{ toggle: 'smooth-scroll', offset: '0' }%>
        </div>
      </div>
    </div> <!-- / .row -->
  </div>
</section>

<!-- Pitch cards
================================================== -->
<section class="container">
  <div class="mx-auto">
    <div class="card-deck" data-aos="fade-up">

      <div class="card card-border card-border-lg border-info shadow-light">
        <%= image_tag "https://pictures.kitties.netlib.re/storage/undraw_transfer_money_rywa.svg", class: "card-img-top mt-5", style: "height: 150px;" %>
        <div class="card-body">
          <p class="card-text text-justify text-gray-600"><strong>Un financement sous forme de pourboires pour l'équipe de développement d'un projet.</strong></p>
        </div>
      </div>

      <div class="card card-border card-border-lg border-info shadow-light">
        <%= image_tag "https://pictures.kitties.netlib.re/storage/undraw_time_management_30iu.svg", class: "card-img-top mt-5", style: "height: 150px;" %>
        <div class="card-body">
          <p class="card-text text-justify text-gray-600"><strong>Une visualisation du temps nécessaire au développement des outils que vous utilisez.</strong></p>
        </div>
      </div>

      <div class="card card-border card-border-lg border-info shadow-light">
        <%= image_tag "https://pictures.kitties.netlib.re/storage/undraw_online_wishes_dlmr.svg", class: "card-img-top mt-5", style: "height: 150px;" %>
        <div class="card-body">
          <p class="card-text text-justify text-gray-600"><strong> En résumé : une rémunération juste, c'est-à-dire plus de temps pour le développement et un outil de meilleure qualité !</strong></p>
        </div>
      </div>
    </div>

  </div>
</section>

<!-- PROJECTS
================================================== -->
<section class="pt-7 pt-md-10" data-aos="fade-up">
  <div class="container">
    <div class="row">
      <div class="col-12">

        <!-- Heading -->
        <h3 class="mb-0 text-gray-700" id="list_projects">
          <strong>Tous les projets</strong>
        </h3>

        <!-- Text -->
        <p class="mb-5 text-muted">
          Découvrez les projets et aidez les développeurs avec un don !
        </p>

      </div>
    </div> <!-- / .row -->
    <div class="row">

      <% @projects.each do |project| %>
        <%if project.validated %>
          <div class="col-12 col-md-6 d-flex">

            <!-- Card -->
            <div class="card mb-6 shadow-light-lg lift lift-lg">

              <%= link_to project_path(project), style: "text-decoration: none" do %>
                <!-- Image -->
                <% if project.cover.attached? %>
                  <%= image_tag project.cover.variant(resize: '480x320').processed, class: "card-img-top" %>
                <% else %>
                  <%= image_tag "https://images.unsplash.com/photo-1481887328591-3e277f9473dc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1060&q=80", class: "card-img-top" %>
                <% end %>

                <!-- Shape -->
                <div class="position-relative">
                  <div class="shape shape-bottom shape-fluid-x svg-shim text-white">
                    <svg viewBox="0 0 2880 480" fill="none" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" clip-rule="evenodd" d="M2160 0C1440 240 720 240 720 240H0v240h2880V0h-720z" fill="currentColor"/></svg>
                  </div>
                </div>

                <!-- Body -->
                <div class="card-body">

                  <!-- Heading -->
                  <h3>
                    <%= project.name %>
                  </h3>

                  <!-- Text -->
                  <p class="mb-0 text-muted">
                    <%= project.pitch %>
                  </p>

                </div>

                <!-- Meta -->
                <div class="card-meta mt-auto">

                  <!-- Divider -->
                  <hr class="card-meta-divider">

                  <!-- Author -->
                  <% if project.user.first_name && project.user.last_name %>
                    <%= link_to user_fr_path(project.user), class: "text-uppercase text-muted mr-2 mb-0", title:"Voir le profil" do %>
                      <%= project.user.first_name + ' ' + project.user.last_name  %>
                    <%end%>
                  <%else%>
                    <%=link_to "Voir le développeur", user_fr_path(project.user), class: "text-uppercase text-muted mr-2 mb-0", title:"Voir le profil"%>
                  <% end %>

                  <!-- Date -->
                  <p class="h6 text-uppercase text-muted mb-0 ml-auto">
                    <%= project.created_at.strftime('%d/%m/%Y')  %>
                  </p>

                </div>

              <%end%>
            </div>

          </div>
        <%end%>
      <%end%>
    </div>
  </div>
</section>
