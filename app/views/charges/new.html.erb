<section class="section-border border-primary">
      <div class="container d-flex flex-column">
        <div class="row align-items-center justify-content-center no-gutters min-vh-50" id= "validate-amount">
          <div class="col-12 col-md-4 col-lg-4 py-8 py-md-11">

            <!-- Form -->
            <%= form_tag project_charges_path(@project, :amount => @amount), method: :post, class: 'container d-flex flex-column text-center' do %>
              <article>
                <% if flash[:error].present? %>
                  <div id="error_explanation">
                    <p><%= flash[:error] %></p>
                  </div>
                <% end %>
                <label class="amount text-center">
                  <span>Faire un don de <%=@amount%> â‚¬</span>
                </label>
              </article>
              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                      data-description="Finalisation de votre commande"
                      data-amount=<%=100*@amount.to_i%>
                      data-locale="fr"
                      data-currency="EUR"
                      data-panel-label="Payer"
                      data-label="Payer par carte"></script>
              <% end %>
            
            

        </div> <!-- / .row -->
      </div> <!-- / .container -->
    </section>



