<%= devise_error_messages! %>

<section class="section-border border-primary">
  <div class="container d-flex flex-column">
    <div class="row align-items-center justify-content-center no-gutters min-vh-100">
      <div class="col-12 col-md-5 col-lg-4 py-8 py-md-11">
        
        <!-- Heading -->
        <h1 class="mb-0 font-weight-bold text-center">
          S'inscrire
        </h1>

        <!-- Text -->
        <p class="mb-6 text-center text-muted">
          Pr√©sentez vos projets OpenSources, et trouvez du soutien financier.
        </p>

        <!-- Form -->
        <%= form_for(resource, :html => {:class => 'mb-6'}, as: resource_name, url: registration_path(resource_name)) do |f| %>


          <!-- Email -->
          <div class="form-group mb-5">
            <%= f.email_field :email, autofocus: true, placeholder: "Adresse email", class: "form-control form-control-flush" %>
          </div>

          <div class="form-group mb-5">
            <%= f.password_field :password, placeholder: "Mot de passe", class: "form-control form-control-flush" %>
          </div>

          <!-- Confirm password -->
          <div class="form-group mb-5">
            <%= f.password_field :password_confirmation, placeholder: "Confirmez votre mot de passe", class: "form-control form-control-flush"%>
          </div>

          <!-- Submit -->
          <div class="actions">
            <%= f.submit "S'inscrire", class: "btn btn-block btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
